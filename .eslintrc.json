{
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:perfectionist/recommended-natural"
  ],
  "plugins": ["prettier", "perfectionist"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "semi": true,
        "singleQuote": false,
        "printWidth": 100
      }
    ],
    "perfectionist/sort-objects": [
      "error",
      {
        "type": "natural",
        "order": "asc"
      }
    ],
    "perfectionist/sort-imports": "off"
  }
}
